{% extends 'base.html.twig' %}

{% block title %}Match Maker !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if app.user %}
        <h1>Bonjour {{ app.user.username }}</h1>
            <p>Votre Niveau : {{ app.user.ratio }}</p>
            <h2>Top 10</h2>
            <ul style="width:33%;">
            {% for player in top10 %}
                <li{% if app.user == player %} style="background-color: #1f69c0;color:white;"{% endif %}><span style="width:90px;">{{ player.ratio|round }} : </span>{{ player.username }}</li>
            {% endfor %}
            </ul>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('lobby') }}">Rejoindre le lobby</a>
            <a href="{{ path('lobbyPending') }}">Visualiser le lobby</a>
        {% else %}
            <a href="{{ path('lobby') }}">Rejoindre le lobby</a>
            <a href="{{ path('match_maker_index') }}">Consulter mes matchs</a>
        {% endif %}
    {% else %}
        <a href="{{ path('app_login') }}">Me connecter</a>
        <a href="{{ path('player_new') }}">Cr√©er un compte</a>
    {% endif %}
</div>
{% endblock %}
